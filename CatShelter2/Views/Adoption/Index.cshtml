@model CatShelter.ViewModels.AdoptionViewModels.IndexViewModel

@{
    ViewData["Title"] = "Index";
}

<h1>Adoptions</h1>

<style>
    .filter-container {
        display: flex;
    }

    .filter-box {
        margin-right: 10px;
        margin-top: 10px;
        margin-bottom: 10px;
    }

    .forms-parent {
        position: relative;
    }

    .clear-filter-form {
        position: absolute;
        top: 92px;
        left: 80px;
    }
</style>

<p>
    <a asp-action="Create">Create New</a>
</p>
<div class="forms-parent">
    <form asp-action="Index" method="get">
        <div class="filter-container">
            <div class="form-group filter-box">
                <label class="control-label"></label>
                <select class="form-control" name="Filter" value="@Model.AdoptionFilter.Filter">
                    <option value="All">All</option>
                    <option value="OnlyLongTerm">Long term</option>
                    <option value="OnlyTemporary">Temporary</option>
                </select>
            </div>
        </div>
        <div class="filter-container">
            <div class="form-group filter-box">
                <button type="submit" value="Save" class="btn btn-primary">Search</button>
            </div>
        </div>
    </form>
</div>

<table class="table table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Adoptions[0].User!.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Adoptions[0].Cat!.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Adoptions[0].Cat!.Carer!.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Adoptions[0].Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Adoptions[0].AdoptionType)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Adoptions)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.User!.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Cat!.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Cat!.Carer!.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Date)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AdoptionType)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
