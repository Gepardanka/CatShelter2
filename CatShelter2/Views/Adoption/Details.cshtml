@model CatShelter.ViewModels.AdoptionViewModels.AdoptionViewModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Adoption</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Cat)
        </dt>
        <dd class = "col-sm-10">
            <a asp-controller="Cat" asp-action="Details" asp-route-id="@Model.Cat?.Id">
                @Model.Cat?.Name
            </a>
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.User)
        </dt>
        <dd class = "col-sm-10">
            <a asp-controller="Cat" asp-action="Details" asp-route-id="@Model.User?.Id">
                @Model.User?.Email
            </a>
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Date)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Date)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.AdoptionType)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.AdoptionType)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
