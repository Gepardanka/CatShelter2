@model CatShelter.ViewModels.UserViewModels.IndexViewModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<style>
.filter-container {
    display:flex;
}
.filter-box{
    margin-right:10px;
    margin-top:10px;
    margin-bottom:10px;
}
.forms-parent{
    position:relative;
}
.clear-filter-form{
    position:absolute;
    top:92px;
    left:80px;
}
</style>

<div class="forms-parent">
    <form asp-action="Index" method="get">
        <div class="filter-container">
            <div class="form-group filter-box">
                <label class="control-label">Surname</label>
                <input name="surname" class="form-control" value="@Model.UserFilter.Surname" />
            </div>
            <div class="form-group filter-box">
                <label class="control-label">Name</label>
                <input name="name" class="form-control" value="@Model.UserFilter.Name" />
            </div>
        </div>
        <div class="filter-container">
            <div class="form-group filter-box">
                <button type="submit" value="Save" class="btn btn-primary">Search</button>
            </div>
        </div>

    </form>
    <form asp-action="Index" method="get" class="clear-filter-form">
        <input name="surname" class="form-control" value="" hidden />
        <input name="name" class="form-control" value="" hidden />
        <button type="submit" value="Save" class="btn btn-primary">Clear filter</button>
    </form>
</div>



<p>
    <a asp-action="Create" style="margin-right:5px">Create New</a>
    <a asp-action="Admins" style="margin-right:5px">Admins</a>
    <a asp-action="Employees">Employees</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Users[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Users[0].Surname)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Users[0].Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Users[0].Phone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Users[0].IsAdmin)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Users[0].IsEmployee)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Users) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Surname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Phone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsAdmin)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsEmployee)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
